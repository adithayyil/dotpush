{
  "manifest_version": 3,
  "name": "dotpush",
  "version": "1.0.0",
  "description": "dotpush is a Chrome extension that seamlessly bridges your LeetCode practice with your GitHub portfolio. Never lose your coding solutions again - every problem you solve gets automatically pushed to your GitHub repository, building an impressive coding portfolio over time.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "dotpush - Sync LeetCode to GitHub"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*"],
      "js": ["content.js"]
    }
  ]
}
